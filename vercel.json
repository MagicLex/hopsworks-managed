{
  "crons": [
    {
      "path": "/api/usage/collect-opencost",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/billing/sync-stripe", 
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/sync-projects",
      "schedule": "*/30 * * * *"
    }
  ],
  "functions": {
    "src/pages/api/usage/collect-opencost.ts": {
      "maxDuration": 300
    },
    "src/pages/api/billing/sync-stripe.ts": {
      "maxDuration": 60
    },
    "src/pages/api/cron/sync-projects.ts": {
      "maxDuration": 60
    }
  }
}