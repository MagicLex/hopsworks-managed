{
  "crons": [
    {
      "path": "/api/usage/collect",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/usage/collect-k8s",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/billing/sync-stripe", 
      "schedule": "0 3 * * *"
    }
  ],
  "functions": {
    "src/pages/api/usage/collect.ts": {
      "maxDuration": 60
    },
    "src/pages/api/usage/collect-k8s.ts": {
      "maxDuration": 300
    },
    "src/pages/api/billing/sync-stripe.ts": {
      "maxDuration": 60
    }
  }
}